{
  "name": "@ckwalsh/typescript-dev-configs",
  "version": "0.0.0",
  "description": "Dev tool configs for @ckwalsh/* typescript packages",
  "keywords": [],
  "homepage": "https://github.com/ckwalsh/typescript-configs#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckwalsh/typescript-configs"
  },
  "bugs": {
    "url": "https://github.com/ckwalsh/typescript-configs/issues"
  },
  "license": "MIT",
  "author": "Cullen Walsh",
  "type": "module",
  "files": [
    "dist",
    "tsconfigs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "attw": "pnpm pack --out attw.tgz && attw --quiet attw.tgz || attw attw.tgz",
    "build": "tsup --silent",
    "build-watch": "tsup --watch",
    "knip": "knip",
    "lint": "eslint --cache",
    "lint-fix": "eslint --cache --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky && pnpm run build",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs"
      }
    },
    "./tsconfig.json": "./tsconfigs/tsconfig.json",
    "./tsconfig.browser.json": "./tsconfigs/tsconfig.browser.json",
    "./tsconfig.node.json": "./tsconfigs/tsconfig.node.json"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "lib": "dist"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.10.0",
  "devEngines": {
    "packageManager": {
      "name": "pnpm",
      "onFail": "error"
    }
  },
  "dependencies": {
    "@eslint/js": "^9.28.0",
    "@tsconfig/recommended": "^1.0.8",
    "@types/node": "^24.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-x": "^4.15.1",
    "eslint-plugin-license-header": "^0.8.0",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "ts-jest": "^29.3.4",
    "tsup": "^8.5.0",
    "typescript-eslint": "^8.34.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@jest/globals": "^29.7.0",
    "@trivago/prettier-plugin-sort-imports": "github:ckwalsh/prettier-plugin-sort-imports",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "knip": "^5.60.2",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@tsconfig/node24": "^24.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0"
  }
}
