{
  "name": "@ckwalsh/typescript-dev-configs",
  "version": "0.0.0",
  "description": "Dev tool configs for @ckwalsh/* typescript packages",
  "keywords": [],
  "homepage": "https://github.com/ckwalsh/typescript-configs#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckwalsh/typescript-configs"
  },
  "bugs": {
    "url": "https://github.com/ckwalsh/typescript-configs/issues"
  },
  "license": "MIT",
  "author": "Cullen Walsh",
  "type": "module",
  "files": [
    "dist",
    "!dist/**/metafile*.json",
    "tsconfigs",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "pnpm-pack-and-attw": "./dist/node/bin/pnpm-pack-and-attw.js"
  },
  "scripts": {
    "attw": "HUSKY=0 pnpm pack --out node_modules/.cache/attw/pack.tgz && (attw --quiet node_modules/.cache/attw/pack.tgz || attw node_modules/.cache/attw/pack.tgz)",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "knip": "knip --treat-config-hints-as-errors",
    "lint": "eslint --cache",
    "lint:fix": "eslint --cache --fix",
    "lint-staged": "if [ -n \"${HG}\" ]; then lint-staged --no-stash --diff HEAD; else lint-staged; fi;",
    "test": "node --experimental-vm-modules --disable-warning=ExperimentalWarning ./node_modules/jest/bin/jest.js",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "prepare": "husky && tsup --silent --clean"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./dist/node/src/index.d.ts",
        "default": "./dist/node/src/index.js"
      },
      "require": {
        "types": "./dist/node/src/index.d.cts",
        "default": "./dist/node/src/index.cjs"
      }
    },
    "./tsconfig.neutral.json": "./tsconfigs/tsconfig.neutral.json",
    "./tsconfig.browser.json": "./tsconfigs/tsconfig.browser.json",
    "./tsconfig.node.json": "./tsconfigs/tsconfig.node.json"
  },
  "module": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "main": "./dist/node/index.cjs",
  "packageManager": "pnpm@10.12.1",
  "devEngines": {
    "packageManager": {
      "name": "pnpm",
      "onFail": "error"
    }
  },
  "dependencies": {
    "@eslint/js": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "github:ckwalsh/eslint-plugin-import#319ed202ea7861c5075fc7e40420000e9273444f",
    "eslint-plugin-license-header": "^0.8.0",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript-eslint": "^8.34.1"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@ckwalsh/prettier-plugin-sort-imports": "^5.2.3",
    "@jest/globals": "^30.0.0",
    "@microsoft/api-extractor": "^7.52.8",
    "@tsconfig/node": "npm:@tsconfig/node20@^20.1.6",
    "@types/node": "^20.19.1",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "knip": "^5.61.1",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@ckwalsh/prettier-plugin-sort-imports": "^5.2.3"
  }
}
