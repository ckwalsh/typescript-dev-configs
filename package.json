{
  "name": "@ckwalsh/typescript-dev-configs",
  "version": "0.0.0",
  "description": "Dev tool configs for @ckwalsh/* typescript packages",
  "keywords": [],
  "homepage": "https://github.com/ckwalsh/typescript-configs#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckwalsh/typescript-configs"
  },
  "bugs": {
    "url": "https://github.com/ckwalsh/typescript-configs/issues"
  },
  "license": "MIT",
  "author": "Cullen Walsh",
  "type": "module",
  "files": [
    "dist",
    "!dist/**/metafile*.json",
    "tsconfigs",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "pnpm-pack-and-attw": "./dist/bin/pnpm-pack-and-attw.cjs"
  },
  "scripts": {
    "attw": "HUSKY=0 pnpm pack --out node_modules/.cache/attw/pack.tgz && (attw --quiet node_modules/.cache/attw/pack.tgz || attw node_modules/.cache/attw/pack.tgz)",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "knip": "knip",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint-staged": "if [ -n \"${HG}\" ]; then lint-staged --no-stash --diff HEAD; else lint-staged; fi;",
    "test": "node --experimental-vm-modules --disable-warning=ExperimentalWarning ./node_modules/jest/bin/jest.js",
    "tsc": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch",
    "prepare": "husky && tsup --silent --clean"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./dist/default/index.d.ts",
        "import": "./dist/default/index.js"
      },
      "require": {
        "types": "./dist/default/index.d.cts",
        "require": "./dist/default/index.cjs"
      }
    },
    "./tsconfig.neutral.json": "./tsconfigs/tsconfig.neutral.json",
    "./tsconfig.browser.json": "./tsconfigs/tsconfig.browser.json",
    "./tsconfig.node.json": "./tsconfigs/tsconfig.node.json"
  },
  "module": "./dist/default/index.js",
  "types": "./dist/default/index.d.ts",
  "directories": {
    "lib": "dist/default/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.12.1",
  "devEngines": {
    "packageManager": {
      "name": "pnpm",
      "onFail": "error"
    }
  },
  "dependencies": {
    "@eslint/js": "^9.29.0",
    "@tsconfig/node20": "^20.1.5",
    "@types/node": "^20.19.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-x": "^4.15.2",
    "eslint-plugin-license-header": "^0.8.0",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript-eslint": "^8.34.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@ckwalsh/prettier-plugin-sort-imports": "^5.2.3",
    "@jest/globals": "^30.0.0",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "knip": "^5.61.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@ckwalsh/prettier-plugin-sort-imports": "^5.2.3",
    "@tsconfig/node20": "^20.1.5",
    "@tsconfig/recommended": "^1.0.0",
    "@types/node": "^20.19.0"
  }
}
