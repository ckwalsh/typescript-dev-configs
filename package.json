{
  "name": "@ckwalsh/typescript-dev-configs",
  "version": "1.0.6",
  "description": "Dev tool configs for @ckwalsh/* typescript packages",
  "keywords": [],
  "homepage": "https://github.com/ckwalsh/typescript-dev-configs#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckwalsh/typescript-dev-configs"
  },
  "bugs": {
    "url": "https://github.com/ckwalsh/typescript-dev-configs/issues"
  },
  "license": "MIT",
  "author": "Cullen Walsh",
  "type": "module",
  "files": [
    "dist",
    "!dist/**/metafile*.json",
    "tsconfigs",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "pnpm-pack-and-attw": "./dist/node/bin/pnpm-pack-and-attw.js"
  },
  "scripts": {
    "attw": "HUSKY=0 pnpm pack --out node_modules/.cache/attw/pack.tgz && (attw --quiet node_modules/.cache/attw/pack.tgz || attw node_modules/.cache/attw/pack.tgz)",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "knip": "knip --treat-config-hints-as-errors",
    "lint": "eslint --cache",
    "lint:fix": "eslint --cache --fix",
    "lint-staged": "if [ -n \"${HG}\" ]; then lint-staged --no-stash --diff HEAD; else lint-staged; fi;",
    "test": "node --experimental-vm-modules --disable-warning=ExperimentalWarning ./node_modules/jest/bin/jest.js",
    "tsc": "tsc --build",
    "tsc:watch": "tsc --build --watch",
    "prepare": "husky && rm -rf ./dist && tsup --silent",
    "ci:publish": "pnpm publish"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./dist/node/src/index.d.ts",
        "default": "./dist/node/src/index.js"
      },
      "require": {
        "types": "./dist/node/src/index.d.cts",
        "default": "./dist/node/src/index.cjs"
      }
    },
    "./tsconfig.neutral.json": "./tsconfigs/tsconfig.neutral.json",
    "./tsconfig.browser.json": "./tsconfigs/tsconfig.browser.json",
    "./tsconfig.node.json": "./tsconfigs/tsconfig.node.json"
  },
  "module": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "main": "./dist/node/index.cjs",
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
  "devEngines": {
    "packageManager": {
      "name": "pnpm",
      "onFail": "error"
    }
  },
  "dependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@eslint/js": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "github:ckwalsh/eslint-plugin-import#main",
    "eslint-plugin-license-header": "^0.8.0",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.5.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "typescript-eslint": "^8.56.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@ckwalsh/prettier-plugin-sort-imports": "^5.2.3",
    "@jest/globals": "^30.2.0",
    "@tsconfig/node": "npm:@tsconfig/node20@^20.1.9",
    "@types/node": "^25.3.0",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "knip": "^5.85.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
